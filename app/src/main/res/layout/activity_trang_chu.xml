<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".TrangChuActivity">
    <!--tạo form trang chủ-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/body3"
        android:textAlignment="center">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Siêu thị TTHK"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="27dp" />

        <!--tạo các button trong trang chủ để chuyển đến các giao diện-->
        <Button
            android:id="@+id/btnthemsuaHTtt"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="130dp"
            android:background="@drawable/custom_button"
            android:hint="Thêm sửa hàng tồn"
            android:textAlignment="center"
            android:textColorHint="#000000"
            android:textSize="23dp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnxoaHTtt"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/body2"
            android:background="@drawable/custom_button"
            android:hint="Xóa hàng tồn"
            android:textAlignment="center"
            android:textColorHint="#000000"
            android:textSize="23dp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnthemsuaBHtt"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/body2"
            android:background="@drawable/custom_button"
            android:hint="Thêm sửa bán hàng"
            android:textAlignment="center"
            android:textColorHint="#000000"
            android:textSize="23dp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btnxoaBHtt"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/body2"
            android:background="@drawable/custom_button"
            android:hint="Xóa bán hàng"
            android:textAlignment="center"
            android:textColorHint="#000000"
            android:textSize="23dp"
            app:backgroundTint="@null" />

    </LinearLayout>
</LinearLayout>

