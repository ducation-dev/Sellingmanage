<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".ThemHangTon">
<!--    Tạo form thêm hàng tồn-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/body3"
        android:textAlignment="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ThemSuaHT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto_bold"
                android:text="HÀNG TỒN"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:textSize="20dp" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/body1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMaHTts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_view"
                android:textColor="@color/black"
                android:ems="10"
                android:paddingHorizontal="@dimen/body3"
                android:drawablePadding="@dimen/body3"
                android:hint="Mã hàng tồn"
                android:fontFamily="@font/roboto"
                android:textColorHint="@color/white"
                android:inputType="text"
                android:maxLength="30"
                android:textSize="@dimen/body1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/body1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtTenHTts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_view"
                android:textColor="@color/black"
                android:ems="10"
                android:paddingHorizontal="@dimen/body3"
                android:drawablePadding="@dimen/body3"
                android:hint="Tên hàng tồn"
                android:fontFamily="@font/roboto"
                android:textColorHint="@color/white"
                android:inputType="text"
                android:maxLength="50"
                android:textSize="@dimen/body1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/body1">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtSoluongHTts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_view"
                android:drawablePadding="@dimen/body3"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:hint="Số lượng hàng tồn"
                android:inputType="number"
                android:maxLength="10"
                android:paddingHorizontal="@dimen/body3"
                android:textColor="@color/black"
                android:textColorHint="@color/white"
                android:textSize="@dimen/body1" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edtNgaynhapHTts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/body1"
                android:background="@drawable/background_view"
                android:drawableEnd="@drawable/date_time"
                android:text="Ngày nhập hàng tồn"
                android:textColorHint="@color/white"
                android:textSize="@dimen/body1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/edtHSDHTts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/body1"
                android:background="@drawable/background_view"
                android:drawableEnd="@drawable/date_time"
                android:text="HSD Hàng tồn"
                android:textColorHint="@color/white"
                android:textSize="@dimen/body1" />

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintEnabled="false"
            android:layout_marginTop="@dimen/body1">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtGiaHTts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_view"
                android:textColor="@color/black"
                android:ems="10"
                android:paddingHorizontal="@dimen/body3"
                android:drawablePadding="@dimen/body3"
                android:hint="Giá hàng tồn"
                android:fontFamily="@font/roboto"
                android:textColorHint="@color/white"
                android:inputType="number"
                android:maxLength="10"
                android:textSize="@dimen/body1"
                android:layout_marginTop="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <Button
                android:id="@+id/btnthemHT"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/body1"
                android:layout_marginRight="60dp"
                android:background="@drawable/custom_button"
                android:hint="Thêm"
                android:textAlignment="center"
                android:textColorHint="#FFFFFF"
                android:textSize="25dp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/btnsuaHT"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/body1"
                android:background="@drawable/custom_button"
                android:hint="Sửa"
                android:textAlignment="center"
                android:textColorHint="#FFFFFF"
                android:textSize="25dp"
                app:backgroundTint="@null" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>